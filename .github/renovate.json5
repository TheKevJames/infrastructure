{
    extends: [
        'github>thekevjames/tools:personal',
        'github>thekevjames/tools//renovate/version-as-app.json5',
    ],
    packageRules: [
        {
            matchManagers: [
                'terraform',
            ],
            rangeStrategy: 'widen',
            matchDepNames: [
                '/^hashicorp/terraform$/',
                '/^terraform$/',
            ],
        },
        {
            groupName: 'python',
            allowedVersions: '>=3.12,<3.13',
            matchDepNames: [
                '/^cimg/python$/',
                '/^python$/',
                '/^python/cpython$/',
            ],
        },
    ],
}
