{
  "checks": {
    "cpu": {
      "type": "standard",
      "command": "/opt/sensu/embedded/bin/check-cpu.rb -w 80 -c 90",
      "subscribers": [ "default" ],
      "interval": 30
    },
    "cpu_mpstat": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-cpu-mpstat.rb -s system.${HOSTNAME//./_}.cpu'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    },
    "cpu_pcnt_usage": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-cpu-pcnt-usage.rb -s system.${HOSTNAME//./_}.cpu_percent'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    },
    "cpu_metric": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-cpu.rb -s system.${HOSTNAME//./_}.cpu'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    },
    "user_pct_usage": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-user-pct-usage.rb -s system.${HOSTNAME//./_}.usage'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    }
  }
}
