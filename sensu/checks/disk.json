{
  "checks": {
    "disk_usage": {
      "type": "standard",
      "command": "/opt/sensu/embedded/bin/check-disk-usage.rb -w 85 -c 90",
      "subscribers": [ "default" ],
      "interval": 30
    },
    "disk_capacity": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-disk-capacity.rb -s system.${HOSTNAME//./_}'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    },
    "disk_usage_metric": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-disk-usage.rb -s system.${HOSTNAME//./_}.disk_usage'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    },
    "disk": {
      "type": "metric",
      "command": "/bin/bash -c '/opt/sensu/embedded/bin/metrics-disk.rb -s system.${HOSTNAME//./_}.disk'",
      "subscribers": [ "default" ],
      "interval": 30,
      "output_type": "graphite",
      "handlers": [ "graphite" ]
    }
  }
}
